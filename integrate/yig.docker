FROM centos:7.2.1511
WORKDIR /work
COPY . /work
RUN yum install -y epel-release && \
rpm -ivh https://download.ceph.com/rpm-luminous/el7/noarch/ceph-release-1-1.el7.noarch.rpm && \
yum --enablerepo=epel-testing install -y lttng-ust make gcc libradosstriper-devel librados2-devel golang git rpm-build && \
make build_internal && \
yum clean all && \
rm -rf /var/cache/yum
CMD /work/build/bin/yig
